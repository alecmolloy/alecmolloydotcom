{
  "apps" : [{
      "name"      : "alecmolloy",
      "script"    : "app.js",
      "env_production" : {
        "NODE_ENV": "production"
      },
      "instances" : 4,
      "autorestart": true
    }
  ],
  "deploy" : {
    "production" : {
      "user" : "ubuntu",
      "host" : "alecmolloy",
      "ref"  : "origin/master",
      "repo" : "https://github.com/alecmolloy/alecmolloydotcom.git",
      "path" : "/home/ubuntu",
      "post-deploy" : "sudo npm install && sudo pm2 startOrRestart ecosystem.json --env production"
    }
  }
} 