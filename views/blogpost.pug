extend layout
block main
	article.blogpost.wrapper
		if content.postContent != null
			.blogpost-hero
				img#blogpost-hero-image(src="/blog/" + content.postContent.hero, alt=content.postContent.alt)
		.blogpost-header
			h2#blogpost-header-title #{content.postContent.title}
			#blogpost-header-deck #{content.postContent.deck}
			#blogpost-header-byline #{content.postContent.byline}
		#blogpost-content
			include /private/blog/i-havent-used-glass.html
